<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.scorocode.scorocodetemplate.ru.scorocode.scorocodetemplate.activities.LoginActivity">

    <LinearLayout
        android:id="@+id/llUserName"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/login_activity_margin"
            style="@style/labelStyle"
            android:text="@string/login_activity_user_name_label" />

        <EditText
            android:id="@+id/etUserName"
            android:hint="@string/login_activity_user_name_edittext"
            style="@style/editTextStyle" />


    </LinearLayout>

    <TextView
        android:text="@string/login_activity_email_label"
        style="@style/labelStyle" />

    <EditText
        android:id="@+id/etEmail"
        android:hint="@string/login_activity_email_edittext"
        style="@style/editTextStyle" />

    <TextView
        android:layout_marginTop="@dimen/login_activity_margin"
        style="@style/labelStyle"
        android:text="@string/login_activity_password_label" />

    <EditText
        android:id="@+id/etPassword"
        android:hint="@string/login_activity_password_edittext"
        android:inputType="textPassword"
        style="@style/editTextStyle" />


    <LinearLayout
        android:id="@+id/llRepeatPassword"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/login_activity_margin"
            style="@style/labelStyle"
            android:text="@string/login_activity_repeat_password_label" />

        <EditText
            android:id="@+id/etRepeatPassword"
            android:hint="@string/login_activity_password_repeat_edittext"
            android:inputType="textPassword"
            style="@style/editTextStyle" />


    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="16dp"
        android:text="@string/login_activity_button_login"
        style="@style/button" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_marginTop="8dp"
        android:text="@string/login_activity_button_register"
        style="@style/button" />

</LinearLayout>
